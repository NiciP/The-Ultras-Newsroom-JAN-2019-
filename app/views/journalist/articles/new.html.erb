<%= form_with scope: :article, url: journalist_articles_path, local: true do |form| %>
      <%= form.label :title %>
      <%= form.text_field :title, required: true %>
      <%= form.label :lead %>
      <%= form.text_area :lead, required: true %>
      <%= form.label :content %>
      <%= form.text_area :content, required: true %>
      <%= form.select(:category_ids, Category.all.collect {|p| [ p.name, p.id ] }) %>
      <%= form.submit %>
<% end %>

<%= link_to t('back'), :back %>

